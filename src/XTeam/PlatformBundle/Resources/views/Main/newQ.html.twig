{% extends "XTeamPlatformBundle::layout.html.twig" %}

{% block title %}
    newQ {{ parent() }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/qr.css') }}">
{% endblock %}

{% block content %}
        <!-- begin page-content container -->
        <div class='container'>
            <div class='row'>
                <!-- begin left content column -->
                <div class="col s10 m7 l8 left usrCol">
                    <!--begin question input row -->
                    <div class="row">
                        <!--begin user info column -->
                        <div class="col s3">
                            <p>TestTestTestTestTest</p>
                            <p>Test</p><br>
                            <p>Test</p><br>
                            <p>Test</p><br>
                            <p>Test</p><br>
                        </div>
                        <!--end user info column -->
                        <!--begin question column -->
                        <div class="col s9 qForm">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Titre" id="question_titre" type="text" class="validate">
                                    <label for="question_titre">Question?</label>
                                </div>
                            </div>
                            <div class="row">
                                <form>
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">mode_edit</i>
                                        <textarea id="icon_prefix2" class="materialize-textarea"></textarea>
                                        <label for="icon_prefix2">Mettre ton question ici</label>
                                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                                            <i class="material-icons right">send</i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!--end left content column-->
                </div>


                <!--begin user info column-->
                <div class="col s2 m4 l3 rightCol">
                    <div class="infoCol">
                    <form>
                        <div class="input-field">
                            <input id="search" type="search" required>
                            <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                            <i class="material-icons">close</i>
                        </div>
                    </form>
                    <p>Test</p><br>
                    <p>Test</p><br>
                    </div>
                    <!--end user info column-->
                </div>
                <!-- end page-content container -->
            </div>
        </div>
{% endblock %}