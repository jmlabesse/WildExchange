{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Password</th>
                <th>Email</th>
                <th>Profession</th>
                <th>Business</th>
                <th>Statut</th>
                <th>Promo</th>
                <th>Git</th>
                <th>Twitter</th>
                <th>Facebook</th>
                <th>Linkedin</th>
                <th>Avatar</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.profession }}</td>
                <td>{{ user.business }}</td>
                <td>{{ user.statut }}</td>
                <td>{{ user.promo }}</td>
                <td>{{ user.git }}</td>
                <td>{{ user.twitter }}</td>
                <td>{{ user.facebook }}</td>
                <td>{{ user.linkedin }}</td>
                <td>{{ user.avatar }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
