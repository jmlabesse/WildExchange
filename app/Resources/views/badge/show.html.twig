{% extends 'base.html.twig' %}

{% block body %}
    <h1>Badge</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ badge.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ badge.name }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ badge.icon }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ badge.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('badge_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('badge_edit', { 'id': badge.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
